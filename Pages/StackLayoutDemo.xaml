<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLayouts.Pages.StackLayoutDemo"
             Title="Stack Layout Demo"
             BackgroundColor="white"
             >
    <ScrollView>
        <StackLayout 
            Padding="20"
            Spacing="10"
            Orientation="Vertical"
            VerticalOptions="End"
            BackgroundColor="Grey">
            <Label 
                   Text=".NET MAUI Layouts" TextColor="red" 
                   FontSize="25"
                   FontAttributes="Bold"
                   Margin="30"
                   HorizontalOptions="Center">  
            </Label>
            <Button x:Name="verticalStackLayoutButton" Text="Vertical Stack Layout" Clicked="verticalStackLayoutButton_Clicked"></Button>
            <Button x:Name="horizontalStackLayoutButton" Text="Horizonal Stack Layout" Clicked="horizontalStackLayoutButton_Clicked"></Button>
            <Button x:Name="gridButton" Text="Grid" Clicked="gridButton_Clicked"></Button>
            <Button x:Name="absolutLayoutButton" Text="Absolute Layoout" Clicked="absolutLayoutButton_Clicked"></Button>
            <Button x:Name="flexLayoutButton" Text="Flex Layoout" Clicked="flexLayoutButton_Clicked"></Button>
        </StackLayout>
    </ScrollView>
   
</ContentPage>